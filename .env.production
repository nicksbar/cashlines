# Production Environment Configuration
# Copy and customize these values for your deployment

# Database - PostgreSQL
DATABASE_URL="postgresql://cashlines:YOUR_SECURE_PASSWORD@postgres:5432/cashlines?schema=public"

# Next.js Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Authentication (when implemented)
# NEXTAUTH_SECRET="your-random-secret-key"
# NEXTAUTH_URL="https://your-domain.com"

# Optional: For multi-tenant deployments
# ENABLE_MULTI_TENANT=true
# SEED_DEMO_DATA=false

# Logging
LOG_LEVEL="info"

# Performance
DISABLE_POLLING=true
MAX_POOL_SIZE=20
STATEMENT_CACHE_SIZE=25

# Security
SECURE_COOKIES=true
SAMESITE_COOKIES="strict"
